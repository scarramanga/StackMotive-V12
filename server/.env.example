# Auth Configuration (Preferred Variables)
AUTH_SECRET_KEY=your-secret-key-generate-with-openssl-rand-hex-32
AUTH_REFRESH_SECRET=your-refresh-secret-generate-with-openssl-rand-hex-32
AUTH_ALGO=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=14

# Legacy Auth Variables (for backward compatibility)
# STACKMOTIVE_JWT_SECRET=your-secret-key-generate-with-openssl-rand-hex-32
# STACKMOTIVE_JWT_REFRESH_SECRET=your-refresh-secret-generate-with-openssl-rand-hex-32
# STACKMOTIVE_JWT_ALGORITHM=HS256

# Development Mode
STACKMOTIVE_DEV_MODE=true

# Database
DATABASE_URL=postgresql+psycopg://stackmotive:stackmotive@localhost:5432/stackmotive

# KuCoin API Configuration
# KUCOIN_API_KEY=your_kucoin_api_key
# KUCOIN_API_SECRET=your_kucoin_api_secret
# KUCOIN_API_PASSPHRASE=your_kucoin_api_passphrase
# KUCOIN_SANDBOX=false

# CSV Import Settings
CSV_MAX_ROWS=10000
CSV_MAX_SIZE_MB=20
CSV_AGENT_LOG=false

# IBKR Flex Query (for portfolio import)
IBKR_FLEX_BASE=https://ndcdyn.interactivebrokers.com/AccountManagement/FlexWebService
IBKR_FLEX_TOKEN=your_flex_token_here
IBKR_FLEX_QUERY_ID=your_query_id_here

# AI Provider Configuration (optional for local; CI will stub)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
STACK_AI_PROVIDER=openai
STACK_AI_MODEL=gpt-4o-mini
AI_SUMMARY_CACHE_TTL=300

# Vault Export Configuration
VAULT_BACKEND=local
VAULT_LOCAL_PATH=/tmp/vault
VAULT_S3_BUCKET=
VAULT_S3_REGION=us-east-1
VAULT_S3_ACCESS_KEY_ID=
VAULT_S3_SECRET_ACCESS_KEY=
EXPORT_DIR=/tmp/exports

# User Preferences & Notifications
PREFERENCES_CACHE_TTL=60
NOTIFICATION_BATCH_WINDOW=120
REDIS_URL=redis://localhost:6379/0
