STRIPE_CANCEL_URL=https://staging.stackmotive.com/billing/cancel

# External API Keys (Staging/Test)
FINNHUB_API_KEY=CHANGE_ME_STAGING_FINNHUB_KEY
NEWSAPI_KEY=CHANGE_ME_STAGING_NEWSAPI_KEY
OPENAI_API_KEY=CHANGE_ME_STAGING_OPENAI_KEY

# Broker API Keys (Still Paper Trading/Sandbox)
IBKR_API_KEY=CHANGE_ME_STAGING_IBKR_PAPER_KEY
IBKR_SECRET=CHANGE_ME_STAGING_IBKR_PAPER_SECRET
KUCOIN_API_KEY=CHANGE_ME_STAGING_KUCOIN_SANDBOX_KEY
KUCOIN_SECRET=CHANGE_ME_STAGING_KUCOIN_SANDBOX_SECRET
KUCOIN_PASSPHRASE=CHANGE_ME_STAGING_KUCOIN_SANDBOX_PASSPHRASE

# Logging Configuration (More retention than dev)
LOG_LEVEL=info
LOG_ENABLE_CONSOLE=true
LOG_ENABLE_FILE=true
LOG_ENABLE_REMOTE=true
LOG_RETENTION_DAYS=30
LOG_MAX_FILE_SIZE=50MB

# Feature Flags (All enabled for testing)
ENABLE_PAPER_TRADING=true
ENABLE_REAL_TRADING=false
ENABLE_AI_AGENTS=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_BILLING=true
ENABLE_NOTIFICATIONS=true
ENABLE_WEBHOOKS=true

# Monitoring (Full monitoring in staging)
ENABLE_HEALTH_CHECKS=true
ENABLE_METRICS=true
ENABLE_ALERTS=true
METRICS_PORT=9090

# Staging Tools
ENABLE_API_DOCS=true
ENABLE_DEBUG_ROUTES=false
ENABLE_MOCK_DATA=false

# Session Configuration
SESSION_SECRET=CHANGE_ME_STAGING_SESSION_SECRET
SESSION_MAX_AGE=86400000

# Email Configuration (Staging - use real service)
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USER=apikey
EMAIL_PASSWORD=CHANGE_ME_STAGING_SENDGRID_API_KEY
EMAIL_FROM=noreply@staging.stackmotive.com

# Webhook URLs
WEBHOOK_BASE_URL=https://staging-api.stackmotive.com
STRIPE_WEBHOOK_URL=https://staging-api.stackmotive.com/api/stripe/webhook

# File Upload Configuration
UPLOAD_MAX_SIZE=25MB
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,application/pdf,text/csv

# Cache Configuration
CACHE_TTL=600
CACHE_MAX_KEYS=5000

# Monitoring Services
SENTRY_DSN=CHANGE_ME_STAGING_SENTRY_DSN
SENTRY_ENVIRONMENT=staging

# SSL Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/stackmotive-staging.crt
SSL_KEY_PATH=/etc/ssl/private/stackmotive-staging.key

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7
BACKUP_S3_BUCKET=stackmotive-staging-backups 