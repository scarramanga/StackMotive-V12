# StackMotive Production Environment Template
# Copy this file to .env.production and fill in your production values
# NEVER commit this file with real values to version control

NODE_ENV=production
DEBUG=false

# API Configuration
API_PORT=8000
API_BASE_URL=https://api.stackmotive.com
API_TIMEOUT=30000

# Database Configuration (Production PostgreSQL)
DB_HOST=CHANGE_ME_PRODUCTION_DB_HOST
DB_PORT=5432
DB_NAME=stackmotive_production
DB_USER=stackmotive_prod
DB_PASSWORD=CHANGE_ME_PRODUCTION_DB_PASSWORD_STRONG
DB_SSL=true
DB_MAX_CONNECTIONS=100

# Redis Configuration (Production)
REDIS_HOST=CHANGE_ME_PRODUCTION_REDIS_HOST
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=CHANGE_ME_PRODUCTION_REDIS_PASSWORD

# Authentication & Security (CRITICAL - Use strong values)
JWT_SECRET=CHANGE_ME_PRODUCTION_JWT_SECRET_VERY_LONG_RANDOM_STRING
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=14

# CORS Configuration (Strict)
CORS_ORIGINS=https://stackmotive.com,https://app.stackmotive.com,https://www.stackmotive.com

# Rate Limiting (Strict for production)
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=60

# Stripe Configuration (LIVE ENVIRONMENT)
STRIPE_PUBLISHABLE_KEY=CHANGE_ME_PRODUCTION_STRIPE_LIVE_PUBLISHABLE_KEY
STRIPE_SECRET_KEY=CHANGE_ME_PRODUCTION_STRIPE_LIVE_SECRET_KEY
STRIPE_WEBHOOK_SECRET=CHANGE_ME_PRODUCTION_STRIPE_LIVE_WEBHOOK_SECRET
STRIPE_SUCCESS_URL=https://app.stackmotive.com/billing/success
STRIPE_CANCEL_URL=https://app.stackmotive.com/billing/cancel

# External API Keys (Production)
FINNHUB_API_KEY=CHANGE_ME_PRODUCTION_FINNHUB_KEY
NEWSAPI_KEY=CHANGE_ME_PRODUCTION_NEWSAPI_KEY
OPENAI_API_KEY=CHANGE_ME_PRODUCTION_OPENAI_KEY

# Broker API Keys (LIVE TRADING - EXTREME CAUTION)
IBKR_API_KEY=CHANGE_ME_PRODUCTION_IBKR_LIVE_KEY
IBKR_SECRET=CHANGE_ME_PRODUCTION_IBKR_LIVE_SECRET
KUCOIN_API_KEY=CHANGE_ME_PRODUCTION_KUCOIN_LIVE_KEY
KUCOIN_SECRET=CHANGE_ME_PRODUCTION_KUCOIN_LIVE_SECRET
KUCOIN_PASSPHRASE=CHANGE_ME_PRODUCTION_KUCOIN_LIVE_PASSPHRASE

# Logging Configuration (Production - Minimal console, max retention)
LOG_LEVEL=warn
LOG_ENABLE_CONSOLE=false
LOG_ENABLE_FILE=true
LOG_ENABLE_REMOTE=true
LOG_RETENTION_DAYS=90
LOG_MAX_FILE_SIZE=100MB

# Feature Flags (Production)
ENABLE_PAPER_TRADING=true
ENABLE_REAL_TRADING=true
ENABLE_AI_AGENTS=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_BILLING=true
ENABLE_NOTIFICATIONS=true
ENABLE_WEBHOOKS=true

# Monitoring (Full monitoring with alerts)
ENABLE_HEALTH_CHECKS=true
ENABLE_METRICS=true
ENABLE_ALERTS=true
METRICS_PORT=9090

# Production Security (Strict)
ENABLE_API_DOCS=false
ENABLE_DEBUG_ROUTES=false
ENABLE_MOCK_DATA=false

# Session Configuration
SESSION_SECRET=CHANGE_ME_PRODUCTION_SESSION_SECRET_STRONG
SESSION_MAX_AGE=86400000

# Email Configuration (Production)
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USER=apikey
EMAIL_PASSWORD=CHANGE_ME_PRODUCTION_SENDGRID_API_KEY
EMAIL_FROM=noreply@stackmotive.com

# Webhook URLs
WEBHOOK_BASE_URL=https://api.stackmotive.com
STRIPE_WEBHOOK_URL=https://api.stackmotive.com/api/stripe/webhook

# File Upload Configuration
UPLOAD_MAX_SIZE=50MB
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,application/pdf,text/csv

# Cache Configuration
CACHE_TTL=1800
CACHE_MAX_KEYS=10000

# Monitoring Services
SENTRY_DSN=CHANGE_ME_PRODUCTION_SENTRY_DSN
SENTRY_ENVIRONMENT=production

# SSL Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/stackmotive.crt
SSL_KEY_PATH=/etc/ssl/private/stackmotive.key

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 1 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=stackmotive-production-backups

# High Availability
CLUSTER_MODE=true
CLUSTER_NODES=3
LOAD_BALANCER_URL=https://lb.stackmotive.com

# Security Headers
SECURITY_HSTS_MAX_AGE=31536000
SECURITY_CSP_ENABLED=true
SECURITY_FRAME_OPTIONS=DENY

# Performance
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6
CACHE_CONTROL_MAX_AGE=3600

# Legal & Compliance
GDPR_ENABLED=true
CCPA_ENABLED=true
AUDIT_LOGGING_ENABLED=true

# Analytics
GOOGLE_ANALYTICS_ID=CHANGE_ME_PRODUCTION_GA_ID
MIXPANEL_TOKEN=CHANGE_ME_PRODUCTION_MIXPANEL_TOKEN

# CDN Configuration
CDN_URL=https://cdn.stackmotive.com
STATIC_ASSETS_URL=https://static.stackmotive.com 